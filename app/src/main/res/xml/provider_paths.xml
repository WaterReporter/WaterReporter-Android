<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">

    <!--<external-path name="external_files" path="." />-->

    <cache-path name="appTempDir" path="/"/>

    <!-- We give access to Context.getFileDir() directory
    Used for api we want to keep forever but want to hide from the user
    Exple to /api/api/com.myscript.nebo.debug/file/My folder/_nebo/-->
    <files-path name="appDir" path="/"/>

    <!-- We give access to getExternalFilesDir() directory
    Used for api we want visible to the user and other apps. And api we want located in the app directory.
    Exple to /storage/emulated/0/Android/api/com.myscript.nebo.debug/files/_nebo/-->
    <external-files-path name="publicAppDir" path="/"/>

    <!-- We give access to getExternalCacheDir() directory
    Used for api we want visible to the user and other apps.
    And api we want located in the app directory
    And api we want to allow system to delete in case of low memory
    Exple /storage/emulated/0/Android/api/com.myscript.nebo.debug/cache/_nebo/-->
    <external-cache-path name="publicAppTempDir" path="/"/>

    <!-- We give access to getExternalStorageDirectory() directory
    Used for api we want visible to the user and other apps. And api we want in a general directory.
    Exple /storage/emulated/0/Documents/_nebo/
    Exple /storage/emulated/0/Images/_nebo/-->
    <external-path name="publicDir" path="/"/>

</paths>