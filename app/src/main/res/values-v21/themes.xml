<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">

        <!--<item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_white</item>-->

        <!--<item name="actionModeShareDrawable">@drawable/ic_share_white_24dp</item>-->

        <item name="colorPrimary">@color/gray_247</item>

        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!--<item name="android:actionBarTabTextStyle">@style/TabTextStyle</item>-->

        <!--<item name="android:actionMenuTextColor">@color/white</item>-->

        <item name="colorPrimaryDark">@color/gray_186</item>

        <!-- Support library compatibility -->

        <item name="actionBarStyle">@style/MyActionBar</item>

        <!--<item name="actionBarTabTextStyle">@style/TabTextStyle</item>-->

        <!--<item name="actionMenuTextColor">@color/white</item>-->
        <item name="android:alertDialogTheme">@style/wrDialogTheme</item>

    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">

        <item name="android:titleTextStyle">@style/TitleBarTextColor</item>

        <item name="android:background">@color/gray_247</item>

        <item name="android:backgroundStacked">@color/gray_247</item>

        <item name="android:backgroundSplit">@color/gray_247</item>

        <!-- Support library compatibility -->

        <item name="titleTextStyle">@style/TitleBarTextColor</item>

        <item name="icon">@android:color/transparent</item>

        <item name="background">@color/white</item>

        <item name="backgroundStacked">@color/white</item>

        <item name="backgroundSplit">@color/white</item>

    </style>

    <style name="TitleBarTextColor" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/material_blue_grey950</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:textColor">@color/waterreporter_dark</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- action bar title text -->
    <style name="TitleTextStyle"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- action bar tab text -->
    <style name="TabTextStyle"
        parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="wrDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">

        <!-- Full width -->
        <item name="android:layout_width">match_parent</item>

        <!-- Null window background removes surrounding padding -->
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <!-- Activity animation -->
    <style name="wrActivityAnimation" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Animation style -->
        <item name="android:windowAnimationStyle">@anim/animation_enter_right</item>
        <!--<item name="android:windowEnterAnimation">@anim/animation_enter_right</item>-->

    </style>

</resources>