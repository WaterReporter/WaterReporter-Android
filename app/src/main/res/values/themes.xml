<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">

        <item name="homeAsUpIndicator">@drawable/ic_arrow_back_white</item>

        <item name="actionModeShareDrawable">@drawable/ic_share_white_24dp</item>

        <item name="colorPrimary">@color/base_blue</item>

        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <item name="android:actionBarTabTextStyle">@style/TabTextStyle</item>

        <item name="android:actionMenuTextColor">@color/white</item>

        <item name="colorPrimaryDark">@color/dark_blue</item>

        <!-- Support library compatibility -->

        <item name="actionBarStyle">@style/MyActionBar</item>

        <item name="actionBarTabTextStyle">@style/TabTextStyle</item>

        <item name="actionMenuTextColor">@color/white</item>

    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">

        <item name="android:titleTextStyle">@style/TitleBarTextColor</item>

        <item name="android:background">@color/base_blue</item>

        <item name="android:backgroundStacked">@color/base_blue</item>

        <item name="android:backgroundSplit">@color/base_blue</item>

        <!-- Support library compatibility -->

        <item name="titleTextStyle">@style/TitleBarTextColor</item>

        <item name="icon">@android:color/transparent</item>

        <item name="background">@color/base_blue</item>

        <item name="backgroundStacked">@color/base_blue</item>

        <item name="backgroundSplit">@color/base_blue</item>

    </style>

    <style name="TitleBarTextColor" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:textColor">@color/waterreporter_dark</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- action bar title text -->
    <style name="TitleTextStyle"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- action bar tab text -->
    <style name="TabTextStyle"
        parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/white</item>
    </style>


</resources>