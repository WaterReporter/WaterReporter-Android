<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">

        <item name="homeAsUpIndicator">@drawable/ic_arrow_back_white</item>

        <item name="actionModeShareDrawable">@drawable/ic_share_white_24dp</item>

        <item name="colorPrimary">@color/white</item>

        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <item name="android:actionBarTabTextStyle">@style/TabTextStyle</item>

        <!--<item name="android:actionMenuTextColor">@color/white</item>-->

        <item name="colorPrimaryDark">@color/gray_f5f7f9</item>

        <!-- Support library compatibility -->

        <item name="actionBarStyle">@style/MyActionBar</item>

        <item name="actionBarTabTextStyle">@style/TabTextStyle</item>

        <!--<item name="actionMenuTextColor">@color/white</item>-->
        <item name="android:alertDialogTheme">@style/wrDialogTheme</item>

    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">

        <item name="android:titleTextStyle">@style/TitleBarTextColor</item>

        <item name="android:background">@color/white</item>

        <item name="android:backgroundStacked">@color/white</item>

        <item name="android:backgroundSplit">@color/white</item>

        <!-- Support library compatibility -->

        <!--<item name="titleTextStyle">@style/TitleBarTextColor</item>-->

        <item name="icon">@android:color/transparent</item>

        <item name="background">@color/white</item>

        <item name="backgroundStacked">@color/white</item>

        <item name="backgroundSplit">@color/white</item>

    </style>

    <style name="TitleBarTextColor" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SpinnerItem">
        <item name="android:textColor">@color/waterreporter_dark</item>
        <item name="android:padding">10dp</item>
    </style>

    <!-- action bar title text -->
    <style name="TitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- action bar tab text -->
    <style name="TabTextStyle" parent="@style/Widget.AppCompat.ActionBar.TabText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ProfileTabLayout" parent="Widget.Design.TabLayout">
        <!--<item name="tabMaxWidth">@dimen/tab_max_width</item>-->
        <item name="tabIndicatorColor">@color/base_blue</item>
        <item name="tabIndicatorHeight">2dp</item>
        <!--<item name="tabPaddingStart">12dp</item>-->
        <!--<item name="tabPaddingEnd">12dp</item>-->
        <!--<item name="tabBackground">?attr/selectableItemBackground</item>-->
        <item name="tabTextAppearance">@style/ProfileTabTextAppearance</item>
        <!--<item name="tabSelectedTextColor">?android:textColorPrimary</item>-->
    </style>

    <style name="ProfileTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <!--<item name="android:textColor">?android:textColorSecondary</item>-->
        <item name="textAllCaps">false</item>
    </style>

    <style name="wrDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">

        <!-- Full width -->
        <item name="android:layout_width">match_parent</item>

        <!-- Null window background removes surrounding padding -->
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>

    </style>

</resources>