<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_user_profile"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_gradient_bottom_bias"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="240dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/profileMeta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/watershed_gradient_overlay"
        android:orientation="vertical">

        <TextView
            android:id="@+id/territoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:maxLines="1"
            android:paddingBottom="0dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="0dp"
            android:textColor="@color/material_blue_grey950"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/states"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="4dp"
            android:textColor="@color/gray_186"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reportCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/watershed_gradient_overlay"
            android:gravity="start|center_vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:textColor="@color/gray_186"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>