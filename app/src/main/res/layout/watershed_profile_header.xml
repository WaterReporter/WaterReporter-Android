<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:minHeight="320dp"
    android:orientation="vertical">

    <!--<android.support.v4.widget.Space-->
    <!--android:id="@+id/mapOffsetSpace"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="240dp"-->
    <!--android:clickable="true" />-->

    <!--<RelativeLayout-->
    <!--android:id="@+id/mapOffsetSpace"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="240dp"-->
    <!--android:clickable="true" />-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/mapOffsetSpace"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_gravity="top"
            android:clickable="true" />

        <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profileMeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="240dp"
            android:background="@color/white"
            app:alignContent="center"
            app:alignItems="flex_start"
            app:flexDirection="row"
            app:flexWrap="nowrap">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/attrs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/territoryName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:gravity="start|center_vertical"
                    android:maxLines="1"
                    android:paddingBottom="0dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="0dp"
                    android:paddingTop="16dp"
                    android:textColor="@color/material_blue_grey950"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/states"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.8"
                    android:fontFamily="sans-serif"
                    android:gravity="start|center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="0dp"
                    android:paddingTop="4dp"
                    android:textColor="@color/material_blue_grey950"
                    android:textSize="16sp" />

                <com.google.android.flexbox.FlexboxLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:paddingEnd="0dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="0dp"
                    android:paddingStart="16dp"
                    app:alignItems="flex_start">

                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/postCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/watershed_gradient_overlay"
                        android:visibility="gone"
                        app:alignItems="center"
                        app:justifyContent="flex_start"
                        app:layout_flexGrow="0"
                        app:layout_flexShrink="0">

                        <TextView
                            android:id="@+id/postCountLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="16dp"
                            android:paddingEnd="16dp"
                            android:paddingLeft="0dp"
                            android:paddingRight="16dp"
                            android:paddingStart="0dp"
                            android:paddingTop="8dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </com.google.android.flexbox.FlexboxLayout>

                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/groupCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/watershed_gradient_overlay"
                        android:visibility="gone"
                        app:alignItems="center"
                        app:justifyContent="flex_start"
                        app:layout_flexGrow="0"
                        app:layout_flexShrink="0">

                        <TextView
                            android:id="@+id/groupCountLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="16dp"
                            android:paddingEnd="16dp"
                            android:paddingLeft="0dp"
                            android:paddingRight="16dp"
                            android:paddingStart="0dp"
                            android:paddingTop="8dp"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </com.google.android.flexbox.FlexboxLayout>

                </com.google.android.flexbox.FlexboxLayout>

            </LinearLayout>

        </com.google.android.flexbox.FlexboxLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/accessMap"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="top|end"
            android:layout_marginTop="194dp"
            android:clickable="false"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@drawable/ic_map_white_24dp"
            app:fabSize="normal"
            app:rippleColor="@color/splash_blue_dark"
            app:useCompatPadding="true" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_232" />

    <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/filterGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@color/gray_250.50.52"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        app:alignContent="center"
        app:alignItems="center"
        app:flexDirection="row"
        app:flexWrap="nowrap"
        app:justifyContent="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:text="Filters"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/filterCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="8dp"
            android:paddingStart="8dp"
            android:textColor="@color/splash_blue"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/filterIconView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:alpha="0.4"
            android:scaleType="fitXY"
            android:src="@drawable/ic_filter_list_black_24dp" />

    </com.google.android.flexbox.FlexboxLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_232" />

    <include layout="@layout/prompt_empty_profile" />

</LinearLayout>