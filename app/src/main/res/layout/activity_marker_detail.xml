<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="none"
    android:fillViewport="true"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context="com.viableindustries.waterreporter.MarkerDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="88dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@drawable/logo_horizontal_lockup" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_224" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none"
            android:fillViewport="true"
            android:paddingBottom="55dp"
            android:scrollbars="none">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/report_stub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_250.50.52"
                android:orientation="vertical">

                <!--<RelativeLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="56dp"-->
                <!--android:background="#FFFFFF">-->

                <!--<ImageView-->
                <!--android:id="@+id/logo"-->
                <!--android:layout_width="88dp"-->
                <!--android:layout_height="24dp"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:scaleType="fitXY"-->
                <!--android:src="@drawable/logo_horizontal_lockup" />-->

                <!--</RelativeLayout>-->

                <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="@color/gray_224" />-->

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="0dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="64dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/owner_avatar"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:scaleType="fitXY" />

                    </RelativeLayout>

                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="4"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/report_owner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="0dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="0dp"
                            android:paddingTop="0dp"
                            android:text="A name goes here"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/report_watershed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="0dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="0dp"
                            android:paddingTop="2dp"
                            android:text="Upper Potomac Watershed"
                            android:textColor="@color/gray_186"
                            android:textSize="@dimen/small_text" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/report_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:gravity="end"
                        android:paddingBottom="0dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="16dp"
                        android:paddingTop="0dp"
                        android:text="A date goes here"
                        android:textColor="@color/gray_186"
                        android:textSize="@dimen/small_text" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/report_thumb"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:background="@color/gray_224"
                    android:scaleType="fitXY" />

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:orientation="horizontal"
                    android:paddingBottom="0dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp">

                    <RelativeLayout
                        android:id="@+id/action_badge"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_vertical"
                            android:scaleType="fitXY"
                            android:src="@drawable/action_badge_small" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/location_icon"
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="0dp"
                        android:paddingRight="0dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_vertical"
                            android:scaleType="fitXY"
                            android:src="@drawable/report_location_icon" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="48dp"
                        android:layout_height="match_parent"
                        android:paddingLeft="0dp"
                        android:paddingRight="0dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_vertical"
                            android:scaleType="fitXY"
                            android:src="@drawable/comment_icon" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingBottom="0dp"
                        android:paddingLeft="0dp"
                        android:paddingRight="0dp"
                        android:paddingTop="0dp"
                        android:text="0 comments"
                        android:textColor="@color/gray_186"
                        android:textSize="@dimen/small_text" />

                    <RelativeLayout
                        android:id="@+id/action_ellipsis"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:paddingLeft="0dp"
                        android:paddingRight="9dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="24dp"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:scaleType="fitXY"
                            android:src="@drawable/timeline_action_ellipsis" />

                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/report_caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="0dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp"
                    android:text="A caption goes here"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/report_groups"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp"
                    android:text="A group list goes here"
                    android:textColor="@color/gray_186"
                    android:textSize="@dimen/small_text" />

            </LinearLayout>

        </ScrollView>

        <fragment
            android:id="@+id/navigationFragment"
            android:name="com.viableindustries.waterreporter.NavigationFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />

    </FrameLayout>

</LinearLayout>