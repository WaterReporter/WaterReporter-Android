<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/container"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
android:paddingBottom="@dimen/activity_vertical_margin"
tools:context="com.viableindustries.waterreporter.MarkerDetailActivity">

<TextView
    android:id="@+id/marker_header"
    android:text="@string/marker_header"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#B4B4B4"
    android:layout_marginLeft="5dp"/>

<TextView
    android:id="@+id/marker_issue"
    android:layout_below="@id/marker_header"
    android:text="@string/marker_issue"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="18dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp" />

<TextView
    android:id="@+id/marker_date"
    android:layout_below="@id/marker_issue"
    android:text="@string/marker_date"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#B4B4B4"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp" />

<TextView
    android:id="@+id/marker_caption"
    android:layout_below="@id/marker_date"
    android:text="@string/marker_caption"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="15dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp" />

<ImageView
    android:id="@+id/marker_image"
    android:layout_below="@id/marker_caption"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"/>

</RelativeLayout>