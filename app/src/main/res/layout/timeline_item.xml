<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/report_stub"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/owner_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical|start"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingEnd="0dp"
            android:paddingLeft="16dp"
            android:paddingRight="0dp"
            android:paddingStart="16dp">

            <LinearLayout
                android:id="@+id/text_descriptors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/report_date"
                android:layout_toStartOf="@+id/report_date"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/report_owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingBottom="0dp"
                    android:paddingTop="0dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/report_watershed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingBottom="0dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/gray_186"
                    android:textSize="@dimen/small_text" />

            </LinearLayout>

            <TextView
                android:id="@+id/report_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="end"
                android:padding="0dp"
                android:textColor="@color/gray_186"
                android:textSize="@dimen/small_text" />

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/report_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="@color/gray_224"
        android:longClickable="true"
        android:scaleType="fitXY" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:paddingBottom="0dp"
        android:paddingLeft="4dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp">

        <RelativeLayout
            android:id="@+id/action_badge"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/action_badge_small" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/location_icon"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:alpha="0.4"
                android:scaleType="fitXY"
                android:src="@drawable/ic_location_on_black_24dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/directions_icon"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:alpha="0.4"
                android:scaleType="fitXY"
                android:src="@drawable/ic_directions_black_24dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/comment_icon"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">

            <ImageView
                android:id="@+id/commentIconView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:alpha="0.4"
                android:scaleType="fitXY"
                android:src="@drawable/ic_mode_comment_black_24dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:textColor="@color/splash_blue"
            android:textSize="@dimen/small_text" />

        <RelativeLayout
            android:id="@+id/share_icon"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:alpha="0.4"
                android:scaleType="fitXY"
                android:src="@drawable/ic_share_black_24dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/favorite_icon"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:paddingLeft="0dp"
            android:paddingRight="0dp">

            <ImageView
                android:id="@+id/favoriteIconView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:alpha="0.4"
                android:scaleType="fitXY"
                android:src="@drawable/ic_favorite_black_24dp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/favorite_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:textColor="@color/favorite_red"
            android:textSize="@dimen/small_text" />

        <RelativeLayout
            android:id="@+id/action_ellipsis"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end"
            android:paddingLeft="0dp"
            android:paddingRight="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:alpha="0.4"
                android:scaleType="fitXY"
                android:src="@drawable/ic_more_horiz_black_24dp" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/report_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:textColorLink="@color/waterreporter_blue"
        android:textSize="16sp" />

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ogData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:visibility="gone"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ogImage"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:adjustViewBounds="true"
                android:background="@color/gray_224"
                android:contentDescription="Open Graph image"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/og_card"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/ogTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/material_blue_grey950"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/ogDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:paddingTop="4dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/ogUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/report_groups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="0dp"
        android:visibility="gone"
        app:alignContent="flex_start"
        app:alignItems="flex_start"
        app:flexDirection="row"
        app:flexWrap="wrap" />

    <TextView
        android:id="@+id/tracker"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone" />

</LinearLayout>