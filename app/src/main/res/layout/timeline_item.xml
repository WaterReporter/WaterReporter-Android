<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/postStub"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/postHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ownerAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical|start"
            android:contentDescription="Owner avatar"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:paddingEnd="0dp"
            android:paddingLeft="16dp"
            android:paddingRight="0dp"
            android:paddingStart="16dp">

            <LinearLayout
                android:id="@+id/textDescriptors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/postDate"
                android:layout_toStartOf="@+id/postDate"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/postOwner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingBottom="0dp"
                    android:paddingTop="0dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/postWatershed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:paddingBottom="0dp"
                    android:paddingEnd="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingStart="0dp"
                    android:paddingTop="2dp"
                    android:textColor="@color/gray_186"
                    android:textSize="@dimen/small_text" />

            </LinearLayout>

            <TextView
                android:id="@+id/postDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="end"
                android:paddingEnd="0dp"
                android:paddingLeft="16dp"
                android:paddingRight="0dp"
                android:paddingStart="16dp"
                android:textColor="@color/gray_186"
                android:textSize="@dimen/small_text" />

        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/postThumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@color/gray_224"
            android:contentDescription="Post image"
            android:longClickable="true"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:id="@+id/actionBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:layout_margin="16dp"
            android:visibility="gone">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/action_badge_small" />

        </RelativeLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/postCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:textColorLink="@color/waterreporter_blue"
        android:textSize="16sp" />

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ogData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:animateLayoutChanges="true"
        android:background="@drawable/card_view_border"
        android:orientation="vertical"
        android:padding="1dp"
        android:visibility="gone"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="0dp"
        card_view:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ogImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@color/gray_224"
                android:contentDescription="Open Graph image"
                android:maxHeight="240dp"
                android:minHeight="200dp"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/ogTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/material_blue_grey950"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/ogDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:paddingTop="4dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/ogUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/postGroups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="0dp"
        android:visibility="gone"
        app:alignContent="flex_start"
        app:alignItems="flex_start"
        app:flexDirection="row"
        app:flexWrap="wrap" />

    <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:animateLayoutChanges="true"
        app:alignContent="flex_start"
        app:alignItems="flex_start"
        app:flexDirection="row"
        app:flexWrap="nowrap">

        <RelativeLayout
            android:id="@+id/locationIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="48dp"
            app:layout_flexGrow="1"
            app:layout_flexShrink="0">

            <ImageView
                android:id="@+id/locationIconView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:contentDescription="Location icon"
                android:scaleType="fitXY"
                android:src="@drawable/ic_location_on_black_24dp" />

        </RelativeLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/commentIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="48dp"
            app:alignItems="center"
            app:justifyContent="center"
            app:layout_flexGrow="1"
            app:layout_flexShrink="0">

            <ImageView
                android:id="@+id/commentIconView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/ic_mode_comment_black_24dp" />

            <TextView
                android:id="@+id/abbrCommentCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="14sp" />

        </com.google.android.flexbox.FlexboxLayout>

        <RelativeLayout
            android:id="@+id/shareIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="48dp"
            app:layout_flexGrow="1"
            app:layout_flexShrink="0">

            <ImageView
                android:id="@+id/shareIconView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:contentDescription="Share icon"
                android:scaleType="fitXY"
                android:src="@drawable/ic_share_black_24dp" />

        </RelativeLayout>

        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/favoriteIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:minWidth="48dp"
            app:alignItems="center"
            app:justifyContent="center"
            app:layout_flexGrow="1"
            app:layout_flexShrink="0">

            <ImageView
                android:id="@+id/favoriteIconView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="Favorite icon"
                android:scaleType="fitXY"
                android:src="@drawable/ic_favorite_black_24dp" />

            <TextView
                android:id="@+id/abbrFavoriteCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="14sp" />

        </com.google.android.flexbox.FlexboxLayout>

        <RelativeLayout
            android:id="@+id/actionEllipsis"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_flexGrow="1"
            app:layout_flexShrink="0">

            <ImageView
                android:id="@+id/extraActionsIconView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:contentDescription="Extra actions"
                android:scaleType="fitXY"
                android:src="@drawable/ic_more_horiz_black_24dp" />

        </RelativeLayout>

    </com.google.android.flexbox.FlexboxLayout>

    <TextView
        android:id="@+id/tracker"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_232" />

</LinearLayout>