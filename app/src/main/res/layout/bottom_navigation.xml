<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:baselineAligned="false">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:background="@color/gray_250.50.52"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/timeline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingTop="0dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_224" />

            <ImageView
                android:id="@+id/timeline_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:alpha="0.8"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/ic_timeline_black_24dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/explore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingTop="0dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_224" />

            <ImageView
                android:id="@+id/explore_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:alpha="0.4"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/ic_explore_black_24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="false"
            android:orientation="vertical"
            android:paddingBottom="0dp"
            android:paddingTop="0dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_224" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:alpha="0.4"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/ic_add_white_24dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingTop="0dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_224" />

            <ImageView
                android:id="@+id/search_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:alpha="0.4"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/ic_search_black_24dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="true"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingTop="0dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_224" />

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:alpha="0.4"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/ic_person_outline_black_24dp" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="-16dp"
        android:focusable="true"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:paddingTop="0dp">

        <RelativeLayout
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/rounded_blue_button"
            android:elevation="2dp">

            <ImageView
                android:id="@+id/submit_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/ic_add_white_24dp" />

        </RelativeLayout>

    </LinearLayout>

</FrameLayout>