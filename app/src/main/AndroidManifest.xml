<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.viableindustries.waterreporter">

    <!-- These permissions do not require run time checks in Android 6.0 and above -->

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- These permissions require run time checks in Android 6.0 and above -->

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.Camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@drawable/water_reporter_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">

        <!-- Mapbox telemetry service -->
        <service android:name="com.mapbox.mapboxsdk.telemetry.TelemetryService" />

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.viableindustries.waterreporter.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>
        <provider
            android:name="com.facebook.FacebookContentProvider"
            android:authorities="com.facebook.app.FacebookContentProvider409059752790536"
            android:exported="true" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        <meta-data
            android:name="DATABASE"
            android:value="water_reporter_reports_004.db" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.viableindustries.waterreporter.data" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PhotoMetaActivity"
            android:label="@string/title_activity_report"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="stateHidden">
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.viableindustries.waterreporter.MainActivity" />
        </activity>
        <activity
            android:name=".LocationActivity"
            android:label="@string/title_activity_map"
            android:parentActivityName=".PhotoMetaActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PhotoMetaActivity" />
        </activity>
        <activity
            android:name=".SignInActivity"
            android:label="@string/title_activity_sign_in"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.viableindustries.waterreporter.MainActivity" />
        </activity>
        <activity
            android:name=".RegistrationActivity"
            android:label="@string/title_activity_registration"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.viableindustries.waterreporter.MainActivity" />
        </activity>
        <activity
            android:name=".ProfileBasicActivity"
            android:label="@string/title_activity_profile_basic"
            android:parentActivityName=".RegistrationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.viableindustries.waterreporter.RegistrationActivity" />
        </activity>
        <activity
            android:name=".RegistrationForkActivity"
            android:label="@string/title_activity_registration_fork"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.viableindustries.waterreporter.MainActivity" />
        </activity>
        <activity
            android:name=".PasswordResetActivity"
            android:label="@string/title_activity_password_reset"
            android:parentActivityName=".SignInActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.viableindustries.waterreporter.SignInActivity" />
        </activity>
        <activity
            android:name=".MapDetailActivity"
            android:label="@string/title_activity_map_detail"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.viableindustries.waterreporter.MainActivity" />
        </activity>
        <activity
            android:name=".MarkerDetailActivity"
            android:label="@string/title_activity_marker_detail"
            android:parentActivityName=".MapDetailActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.viableindustries.waterreporter.MapDetailActivity" />
        </activity>
        <activity
            android:name=".UserProfileActivity"
            android:label="@string/title_activity_user_profile"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.viableindustries.waterreporter.MainActivity" />
        </activity>
        <activity
            android:name=".UserGroupsActivity"
            android:label="@string/title_activity_user_groups"
            android:parentActivityName=".UserProfileActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.viableindustries.waterreporter.UserProfileActivity" />
        </activity>
        <activity
            android:name=".OrganizationProfileActivity"
            android:label="@string/title_activity_organization_profile"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".OrganizationMembersActivity"
            android:label="@string/title_activity_organization_members"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".GroupActionListActivity"
            android:label="@string/title_activity_group_action_list"
            android:parentActivityName=".ProfileBasicActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.viableindustries.waterreporter.ProfileBasicActivity" />
        </activity>
        <activity
            android:name=".CommentActivity"
            android:label="@string/title_activity_comment"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".ProfileSettingsActivity"
            android:label="@string/title_activity_profile_settings"
            android:parentActivityName=".UserProfileActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.viableindustries.waterreporter.UserProfileActivity" />
        </activity>
        <activity
            android:name=".EditProfileActivity"
            android:label="@string/title_activity_edit_profile"
            android:parentActivityName=".ProfileSettingsActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.viableindustries.waterreporter.ProfileSettingsActivity" />
        </activity>
        <activity
            android:name=".SearchActivity"
            android:label="@string/title_activity_search" />
        <activity
            android:name=".TerritoryActivity"
            android:label="@string/title_activity_territory"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".TagProfileActivity"
            android:label="@string/title_activity_tag"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
    </application>

</manifest>